{
  "name": "book-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --project ./",
    "copy": "copyfiles -u 1 src/**/*.graphql dist",
    "dev": "npm run gen-types && NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "start": "rimraf ./dist && npm run compile && npm run copy && NODE_ENV=production node ./dist/",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "test": " npm run compile && npm run copy && jest --watchAll",
    "cover": "jest --coverage",
    "gen-types": "ts-node --files ./src/utils/createTypes.ts",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "@gql2ts/from-schema": "^1.8.0",
    "@types/connect-redis": "^0.0.7",
    "@types/express-rate-limit": "^2.9.3",
    "@types/faker": "^4.1.2",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^3.3.3",
    "dotenv-safe": "^6.0.0",
    "express-rate-limit": "^2.11.0",
    "express-session": "^1.15.6",
    "faker": "^4.1.0",
    "glob": "^7.1.2",
    "graphql": "^0.13.0",
    "graphql-tools": "^3.0.5",
    "graphql-yoga": "^1.14.12",
    "helmet": "^3.13.0",
    "ioredis": "^3.2.2",
    "merge-graphql-schemas": "^1.5.3",
    "mysql2": "^1.5.3",
    "node-fetch": "^2.2.0",
    "rate-limit-redis": "^1.5.0",
    "reflect-metadata": "^0.1.12",
    "request-promise": "^4.2.2",
    "typeorm": "^0.2.7",
    "uuid": "^3.3.2",
    "yup": "^0.26.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@gql2ts/types": "^1.8.0",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.1",
    "@types/express-session": "^1.15.10",
    "@types/glob": "^5.0.35",
    "@types/graphql": "^0.13.3",
    "@types/helmet": "^0.0.38",
    "@types/ioredis": "^3.2.13",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/node-fetch": "^2.1.2",
    "@types/request-promise": "^4.1.42",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^5.1.2",
    "@types/yup": "^0.24.7",
    "babel-core": "^7.0.0-0",
    "copyfiles": "^2.0.0",
    "gql2ts": "^1.8.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "rimraf": "^2.6.2",
    "ts-jest": "22.4.6",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2"
  }
}
