{
  "name": "book-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --project ./",
    "copy": "copyfiles -u 1 src/**/*.graphql dist",
    "dev": "npm run gen-types && NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "start": "rimraf ./dist && npm run compile && npm run copy && node ./dist/",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "test": "jest --watchAll",
    "cover": "jest --coverage",
    "gen-types": "ts-node --files ./src/scripts/createTypes.ts",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "tslint -c tslint.json 'src/**/*.ts' --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@gql2ts/from-schema": "^1.8.0",
    "express-session": "^1.15.6",
    "glob": "^7.1.2",
    "graphql": "^0.13.0",
    "graphql-tools": "^3.0.5",
    "graphql-yoga": "^1.14.12",
    "ioredis": "^3.2.2",
    "merge-graphql-schemas": "^1.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@gql2ts/types": "^1.8.0",
    "@types/express-session": "^1.15.10",
    "@types/glob": "^5.0.35",
    "@types/graphql": "^0.13.3",
    "@types/ioredis": "^3.2.13",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/ws": "^5.1.2",
    "babel-core": "^7.0.0-0",
    "copyfiles": "^2.0.0",
    "gql2ts": "^1.8.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "rimraf": "^2.6.2",
    "ts-jest": "22.4.6",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
