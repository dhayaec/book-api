{
  "name": "book-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --project ./",
    "copy": "copyfiles -u 1 src/**/*.graphql dist",
    "dev": "npm run gen-types && NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "start": "rimraf ./dist && npm run compile && npm run copy && node ./dist/",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "NODE_ENV=test jest --watch",
    "gen-types": "ts-node --files ./src/scripts/createTypes.ts"
  },
  "dependencies": {
    "@gql2ts/from-schema": "^1.8.0",
    "glob": "^7.1.2",
    "graphql": "^0.13.0",
    "graphql-tools": "^3.0.5",
    "graphql-yoga": "^1.14.12",
    "merge-graphql-schemas": "^1.5.3"
  },
  "devDependencies": {
    "@gql2ts/types": "^1.8.0",
    "@types/glob": "^5.0.35",
    "@types/graphql": "^0.13.3",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/ws": "^5.1.2",
    "babel-core": "^7.0.0-0",
    "copyfiles": "^2.0.0",
    "gql2ts": "^1.8.0",
    "jest": "^23.4.1",
    "nodemon": "^1.18.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
